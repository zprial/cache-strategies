{
  "compilerOptions": {
    "baseUrl": ".",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "lib": ["ES2015", "DOM", "ESNext", "ES2020.Promise"],
    "resolveJsonModule": true
  },
  "include": ["./src"]
}
